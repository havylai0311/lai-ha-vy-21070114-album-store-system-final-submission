<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Artist</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to artists_path, class: button_class(theme: "transparent") do %>
      All Artists
      <% end %>
      <%= link_to edit_artist_path(@artist), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @artist.name %></p>
      </li>
      <li>
        <p class="font-semibold">Dob:</p>
        <p><%= @artist.dob %></p>
      </li>
  </ul>
</div>
