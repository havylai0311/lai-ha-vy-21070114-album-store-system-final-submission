<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Shelf</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to shelves_path, class: button_class(theme: "transparent") do %>
      All Shelves
      <% end %>
      <%= link_to edit_shelf_path(@shelf), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Row number:</p>
        <p><%= @shelf.row_number %></p>
      </li>
      <li>
        <p class="font-semibold">Quantity:</p>
        <p><%= @shelf.quantity %></p>
      </li>
  </ul>
</div>
